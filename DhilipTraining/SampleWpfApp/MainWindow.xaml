<Window x:Class="SampleWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Margin="5" FontSize="40">Welcome to WPF User Interface</Label>
        <Label Margin="2" FontSize="28">Enter UR Details here</Label>
        <WrapPanel>
            <Label>Name:</Label>
            <TextBox Width="250" Margin="2" Name="txtName"></TextBox>
        </WrapPanel>
        <WrapPanel>
            <Label>Address:</Label>
            <TextBox Width="250" Margin="2" Name="txtAddress"></TextBox>
        </WrapPanel>
        <WrapPanel>
            <Label>Phone:</Label>
            <TextBox Width="250" Margin="2" Name="txtPhone"></TextBox>
        </WrapPanel>
        <Button Margin="150" Click="Button_Click" Content="Show Details"/>
    </StackPanel>
</Window>
