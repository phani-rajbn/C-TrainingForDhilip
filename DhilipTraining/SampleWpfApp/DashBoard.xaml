<Window x:Class="SampleWpfApp.DashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleWpfApp"
        mc:Ignorable="d"
        Title="WPF DashBoard" Height="450" Width="800">
    <DockPanel Margin="2">
        <Menu>
            <MenuItem Header="Root">
                <MenuItem Header="MainWindow" Click="MenuItem_Click"/>
                <MenuItem x:Name="mnuGrid" Header="Grid Window" Click="onGridClick"/>
                <Separator/>
                <MenuItem Header="Text Window" Click="onTextWindow"/>
                <MenuItem Header="Event Binding" Click="onEventWindow"/>
                <MenuItem Header="Data Binding"/>
            </MenuItem>
            <MenuItem Header="UI Features">
                <MenuItem Header="_Resources" Click="onResource"/>
                <MenuItem Header="_Styles" Click="OnStyles"/>
                <MenuItem Header="_Triggers" Click="onTrigger"/>
                <MenuItem Header="_Data Triggers"/>
                <MenuItem Header="_Dimensional"/>
            </MenuItem>
            <MenuItem Header="MVVM">
                <MenuItem Header="Mvvm Example"/>
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
